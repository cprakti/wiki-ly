<h2>Hello, <%= @user.username %>!</h2>

<h4>Your groups:</h4>
<% @user.groups.each do |group| %>
<div><%= link_to group.name, group %></div>
<% end %>

<h4>Your articles:</h4>
<% @user.articles.each do |article| %>
	<div><%= link_to article.title, "/groups/#{article.group_id}/articles/#{article.id}" %></div>
<% end %>


<h4>Favorites:</h4>
<% @user.favorited_articles.each do |article| %>
  <div> <%= link_to article.title, "/groups/#{article.group_id}/articles/#{article.id}" %> </div>
<% end %>

