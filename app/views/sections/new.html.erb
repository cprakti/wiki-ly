<% provide(:title, '| Create a Section') %>
<h3>Create a Section</h3>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@section) do |f| %>

      <%= f.text_field :subtitle, placeholder: "subtitle" %>
      <%= f.text_field :body, placeholder: "body" %>

      <%= f.submit "create" %>

    <% end %>
  </div>
</div>
