<% provide(:title, '| Groups') %>

<h1><%= @group_name %></h1>

<% if logged_in? %>
  <% if admin? %>
<%= link_to 'delete', group_path(@group),
            method: :delete,
            data: { confirm: 'Are you sure?'} %>
  <% end %>
<% end %>

<h3>Users:</h3>
<% @users.each do |member| %>
  <p><%= member.user.username %>, <%= member.role %></p>
<%end%>

<h3>Articles:</h3>
<% @articles.each do |article| %>
  <p><%= article.title %></p>
<% end %>
